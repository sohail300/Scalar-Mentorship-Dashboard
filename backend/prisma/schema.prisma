generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id  Int @id @default(autoincrement())
  name String 
  email String @unique
  number String @unique
  photo String 
  mentor Mentor @relation(fields: [mentorId], references: [id]) 
  mentorId Int  
  marks Marks?
}

model Mentor {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  number String @unique
  photo String 
  student Student[]
}

model Marks {
  id  Int @id @default(autoincrement())
  idea Int @default(0)
  execution Int @default(0)
  viva Int @default(0)
  total Int @default(0)
  student Student @relation(fields: [studentId], references: [id])
  studentId Int @unique
}